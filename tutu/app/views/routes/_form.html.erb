<%= form_for(@route) do |f| %>

<%= render 'common/errors', resource: @route %>
 
  <div class="field">
    <%= f.label :name, 'Маршрут' %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :train, 'Назначить маршрут поезду:' %><br>
    <%= f.collection_select :train_ids, Train.all, :id, :number %>
  </div>

  <div class="actions">
    <%= f.submit "#{ @route.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
