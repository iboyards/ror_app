

<h1>Список билетов</h1>

<table>
  <thead>
    <tr>
      <th>Номер билета</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.code %></td>
        <td><%= link_to t('common.show'), ticket %></td>
        
        <td><%= link_to t('common.destroy'), ticket, method: :delete, data: { confirm: t('common.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


