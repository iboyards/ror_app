<%= form_for(@car) do |f| %>

<%= render 'common/errors', resource: @car %>
 
  

  <div class="field">
    <%= f.label :up_places, 'Количество верхних мест' %><br>
    <%= f.text_field :up_places%>
  </div>

  <div class="field">
    <%= f.label :low_places, 'Количество нижних мест' %><br>
    <%= f.text_field :low_places %>
  </div>

  <div class="field">
    <%= f.label 'Тип вагона' %>
  </div>

  <div class="field">
    <%= f.radio_button :car_type, "coupe" %>
    <%= f.label :car_type, 'Купе' %>
  </div>

  <div class="field"> 
    <%= f.radio_button :car_type, "econom" %>
    <%= f.label :car_type, 'Плацкарт' %>
  </div>

  <div class="field">
    <%= f.label :train, "Выбрать поезд" %><br>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="actions">
    <%= f.submit "#{ @car.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
