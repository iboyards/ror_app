<% hidden = false unless local_assigns[:hidden] %>

<%= form_for [:admin, train], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>


  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  
   <div class="field">
    <%= f.label t('.num_of_head') %><br>
    <%= f.check_box :sort_from_head %>
  </div>

  <div class="actions">    
    <%= f.submit t('common.edit')%>
  </div>

  <div class="field">
    <%= f.label :route, t('.route') %><br>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="actions">    
    <%= f.submit t('.submit', action: train.new_record? ? t('common.new') : t('common.edit')) %>
  </div>
<% end %>
